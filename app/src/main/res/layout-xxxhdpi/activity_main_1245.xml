<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_1245"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pc1245display"
                android:scaleType="fitXY"></ImageView>

            <SurfaceView
                android:id="@+id/surfaceView"
                android:layout_marginLeft="30dp"
                android:layout_width="460dp"
                android:layout_height="76dp"
                android:layout_gravity="left|center_vertical">
            </SurfaceView>

        </FrameLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/keyAreaImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pc1245mainkey"
            android:scaleType="fitStart"></ImageView>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="40dp">

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ToggleButton"
                android:textColor="#00000000"
                android:checked="false"
                android:background="@drawable/togglebutton1245">
            </ToggleButton>
        </FrameLayout>

        <include
            android:id="@+id/keyArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_keys_1245"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></include>

        <TextView
            android:id="@+id/debugWindow"
            android:text=""
            android:textSize="12sp"
            android:typeface="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
        </TextView>

    </FrameLayout>
</LinearLayout>