<RadioGroup android:id="@+id/radioGroupMode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RadioButton
        android:id="@+id/btnRun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/radio_run"
        android:button="@null" />

    <RadioButton
        android:id="@+id/btnPro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/radio_pro"
        android:button="@null" />

    <RadioButton
        android:id="@+id/btnRsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/radio_rsv"
        android:button="@null" />

</RadioGroup>