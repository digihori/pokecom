<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:columnCount="4"
    android:rowCount="3"
    android:id="@+id/keyFrame">

    <android.support.v7.widget.AppCompatButton
        android:text="MO"
        style="@style/charButton"
        android:layout_column="2"
        android:layout_row="0"
        android:id="@+id/buttonMODE"/>
    <android.support.v7.widget.AppCompatButton
        android:text="CE"
        style="@style/charButton"
        android:layout_column="3"
        android:layout_row="0"
        android:id="@+id/buttonCE"/>

    <!--          -->

    <android.support.v7.widget.AppCompatButton
        android:text="↓"
        style="@style/charButton"
        android:layout_column="0"
        android:layout_row="1"
        android:id="@+id/buttonDA"/>
    <android.support.v7.widget.AppCompatButton
        android:text="↑"
        style="@style/charButton"
        android:layout_column="1"
        android:layout_row="1"
        android:id="@+id/buttonUA"/>
    <android.support.v7.widget.AppCompatButton
        android:text="LA"
        style="@style/charButton"
        android:layout_column="2"
        android:layout_row="1"
        android:id="@+id/buttonLA"/>
    <android.support.v7.widget.AppCompatButton
        android:text="RA"
        style="@style/charButton"
        android:layout_column="3"
        android:layout_row="1"
        android:id="@+id/buttonRA"/>

    <!--          -->

    <android.support.v7.widget.AppCompatButton
        android:text="DEL"
        style="@style/charButton"
        android:layout_column="0"
        android:layout_row="2"
        android:id="@+id/buttonDEL"/>
    <android.support.v7.widget.AppCompatButton
        android:text="INS"
        style="@style/charButton"
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/buttonINS"/>
    <android.support.v7.widget.AppCompatButton
        android:text="BRK"
        style="@style/charButton"
        android:layout_column="2"
        android:layout_row="2"
        android:id="@+id/buttonBRK"/>
    <android.support.v7.widget.AppCompatButton
        android:text="SH"
        style="@style/charButton"
        android:layout_column="3"
        android:layout_row="2"
        android:id="@+id/buttonSHIFT2"/>

</GridLayout>
